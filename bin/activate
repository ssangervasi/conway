#!/bin/bash

build() {
  stack build $@
}

run() {
  stack exec conway-exe -- $@
}

console() {
  stack ghci
}

spec() {
  local pattern="$1"
  local test_arguments
  if [[ -n "$pattern" ]]; then
    test_arguments="-m $pattern"
  fi
  stack test --test-arguments "$test_arguments"
}

conway_prompt() {
  export PS1="ðŸ”³ $PS1"
}

conway_prompt

echo '
Heck yeah, activated!
Use this stuff:
  - build
  - run
  - spec
  - console
'

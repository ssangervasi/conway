#!/bin/bash

register() {
  registered_names="$registered_names $1"  
}

register build
build() {
  stack build $@
}

register run
run() {
  echo "stack exec conway-exe -- $@"
  stack exec conway-exe -- $@
}

register rerun
rerun() {
  build &&
    clear &&
    run $@
}

register demo
demo() {
  rerun \
    --seed-name glider \
    --num-gens 5 \
    --verbose
}

register console
console() {
  stack ghci
}

# Plugin for my dev-tools 

run_spec_command() {
  local pattern="$1"
  local test_arguments
  if [[ -n "$pattern" ]]; then
    test_arguments="-m $pattern"
  fi
  stack test --test-arguments "$test_arguments"
}

run_lint_command() {
  local paths="$1"
  local hlint_arguments="."
  if [[ -n "$paths" ]]; then
    hlint_arguments="$paths"
  fi
  hlint "$hlint_arguments"
}

conway_prompt() {
  export PS1="ðŸ”³ $PS1"
}

register .help
.help() {
  echo '
Heck yeah, activated!
Use this stuff:'
  for name in $registered_names; do
    echo '  - '"$name"
  done
  echo
}

conway_prompt
.help